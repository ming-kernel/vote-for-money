<div class="row-fluid">
  <p id="round-id" class="text-info text-center">Current round is <span></span></p>
</div>

<div class="row-fluid">
  <table class="table" id="statistics">
    <thead>
      <tr>
        <th>#</th>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Total earnings</td>
        <td>0</td>
        <td>0</td>
        <td>0</td>
      </tr>
      <tr>
        <td>Last earnings</td>
        <td>0</td>
        <td>0</td>
        <td>0</td>
      </tr>
    </tbody>
  </table>
</div>

<hr/>

<div class="row-fluid">
    <ul class="thumbnails">
      <li id="left_opponent" class="span6">
        <div class="thumbnail">
          <%= render 'opponent' %>
        </div>

      </li>

      <li id="right_opponent" class="span6">
        <div class="thumbnail">
          <%= render 'opponent' %>
        </div>
      </li>

    </ul>

</div>

<%= javascript_include_tag "game" %>
