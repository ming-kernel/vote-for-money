<div class="row-fluid">
  <p id="round-penalty" class="text-info text-center"></p>
</div>

<div class="row-fluid">
  <table class="table" id="statistics">
    <thead>
      <tr>
        <th>#</th>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Total earnings</td>
        <td>0</td>
        <td>0</td>
        <td>0</td>
      </tr>
      <tr>
        <td>Last earnings</td>
        <td>0</td>
        <td>0</td>
        <td>0</td>
      </tr>
    </tbody>
  </table>
</div>

<hr/>

<div class="row-fluid">
    <ul class="thumbnails">
      <li id="left_opponent" class="span6">
        <div class="thumbnail">
          <%= render 'opponent' %>
        </div>

      </li>

      <li id="right_opponent" class="span6">
        <div class="thumbnail">
          <%= render 'opponent' %>
        </div>
      </li>

    </ul>

</div>


<div id="next-round" class="modal hide" data-backdrop="static" data-keyboard="false">
  <div class="modal-body">
    <p>A deal is reached between <span id="first"></span> and <span id="second"></span>, Press OK to wait others to confirm and begin next round</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" id="ok">OK</a>
  </div>
</div>


<%= javascript_include_tag "game" %>
