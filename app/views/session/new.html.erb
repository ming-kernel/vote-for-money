<div class="container">
  <div class="row">
    <div class="span4">
      <%= form_tag login_path, class: "form-horizontal" do %>     
        <div class="control-group">
          <%= label_tag :name, "User Name", class: "control-label" %>
          <div class="controls">
            <%= text_field_tag :name %>
          </div>
        </div>

        <div class="control-group">
          <%= label_tag :password, 'Password', class: "control-label" %>
          <div class="controls">
            <%= password_field_tag :password %>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <label class="checkbox">
              <input type="checkbox" name="remember_me"> Remember me
            </label>
            <hr/>
            <button type="submit" class="btn">Sign in</button>
          </div>
        </div> 
      <% end %>

    </div>

    <div class="span4 offset1">
      <span>New user? </span>
      <a href=<%= new_user_url %> class="btn btn-link">Sign up</a>
    </div>

  </div>

</div>





